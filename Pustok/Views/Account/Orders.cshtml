@model List<OrderViewModel>

<!-- Begin Main Content Area -->
<main class="main-content">
    @Html.Partial(
    "Partials/_BreadcrumbPartial",
    new BreadcrumbViewModel("orders page", "orders"));

    <div class="account-page-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <partial name="Partials/_SidebarMenuPartial" />
                </div>

                <div class="col-lg-9">
                    <div class="myaccount-orders">
                        <h4 class="small-title">MY ORDERS</h4>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <tbody>
                                    <tr>
                                        <th>ORDER</th>
                                        <th>DATE</th>
                                        <th>STATUS</th>
                                        <th>TOTAL</th>
                                        <th></th>
                                    </tr>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a class="account-order-id" href="#">#@order.TrackingCode</a>
                                            </td>
                                            <td>@order.CreatedAt</td>
                                            <td>@order.StatusName</td>
                                            <td>$@order.Total for @order.Quantity items</td>
                                            <td>
                                                <a asp-controller="account" asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-dark"><span>View</span></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->

